{
  "name": "MISAWA::MD",
  "version": "0.2",
  "description": "markdown形式で名言をコピーします。",
  "manifest_version": 2,
  "icons": {
    "128": "images/icon_128.png",
    "48": "images/icon_048.png",
    "16": "images/icon_016.png"
  },
  "background": {
    "scripts" : ["javascripts/jquery.js", "javascripts/background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon_019.png",
    "default_title": "MISAWA::MD",
    "default_popup": "popup.html"
    },
  "permissions": [ "http://*/*", "https://*/*", "clipboardWrite"]
}
